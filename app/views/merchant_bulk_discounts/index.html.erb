<div id='header'>
  <h1><%= @merchant.name %> Bulk Discounts Index</h1>
  <br>
</div>

<div id='buttons'>
  <%= button_to 'Create a new discount', new_merchant_bulk_discount_path(@merchant.id), method: :get%>
  <br>
</div>

<div id='holidays'>
  <h3>Upcoming Holidays in the United States</h3>
  <% @holidays.each do |holiday| %>
    <p><%= holiday[:name] %> - <%= holiday[:date].strftime("%A, %B %-d, %Y") %></p>
  <% end %>
  <br>
</div>

<div id='bulk_discounts'>
  <h3>Merchant Discounts:</h3>
  <% @merchant.bulk_discounts.each do |discount| %>
    <div id="discount-<%= discount.id %>">
      <p><b>Bulk Discount <%= link_to "#{discount.id}", merchant_bulk_discount_path(@merchant.id, discount.id) %></b></p>
      <p>Quantity Threshold: <%= discount.quant_threshold %></p>
      <p>Discount: <%= (discount.discount * 100) %>%</p>
      <%= button_to 'Delete', merchant_bulk_discount_path(@merchant.id, discount.id), method: :delete%>
      <%= button_to 'Edit', edit_merchant_bulk_discount_path(@merchant.id, discount.id), method: :get%>
    </div>
  <% end %>
</div>
