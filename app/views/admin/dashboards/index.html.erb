<h1> Admin Dashboard </h1>

<h3> Admin <%= link_to "Merchants: Index page", admin_merchants_path %> </h3>
<h3> Admin <%= link_to "Invoices: Index page", admin_invoices_path %> </h3>

<h2>Top 5 Customers:</h2>
<% @customers.top_5_customers.each do |customer| %>
  <div id="<%= customer.id %>">
    <p><b>Customer Name:</b> <%= customer.first_name %> <%= customer.last_name %><br>
       <b># Transactions:</b> <%= customer.num_successful %></p>
  </div>
  <% end %>

<h2>Incomplete Invoices:</h2>
<div id="Incomplete_Invoices">
  <% @invoices.incomplete_invoices_by_date.each do |invoice| %>
    <div id="invoice-<%= invoice.id %>">
      <p><%= link_to "##{invoice.id}", admin_invoice_path(invoice.id) %></p>
      <p>Created At: <%= invoice.created_at.strftime("%A, %B %d, %Y") %></p>
    </div>
  <% end %>
</div>
