<h1> All Merchants </h1>
</br>

<h3> Click this link to <%= link_to "create a new merchant", new_admin_merchant_path %> </h3>

<h2> Top 5 Merchants by Revenue </h2>
<% @merchants.top_5_merchants_revenue.each do |merchant| %>
  <div id="top-5-merchants-<%= merchant.id %>">
    <p> <%= link_to "#{merchant.name}", admin_merchant_path(merchant.id) %>, Revenue Generated: <%= number_to_currency((merchant.revenue / 100)) %> </p>
    <p> Top selling date for <%= merchant.name %> was <%= merchant.merchant_best_day.strftime("%A, %B %d, %Y") %> </p>
  </div>
<% end %>

<h2> Enabled Merchants </h2>
<% @merchants.enabled_merchants.each do |merchant| %>
  <section id="enabled-admin-merchants-<%= merchant.id %>">
  <h3> <%= link_to "#{merchant.name}", admin_merchant_path(merchant.id) %> <h3>
  <p> <%= button_to "Disable", "/admin/merchants/#{merchant.id}", method: :patch, params: { status: merchant.status } %> </p>
  </section>
<% end %>
</br>

<h2> Disabled Merchants </h2>
<% @merchants.disabled_merchants.each do |merchant| %>
  <section id="disabled-admin-merchants-<%= merchant.id %>">
  <h3> <%= link_to "#{merchant.name}", admin_merchant_path(merchant.id) %> <h3>
  <p> <%= button_to "Enable", "/admin/merchants/#{merchant.id}", method: :patch, params: { status: merchant.status } %> </p>
  </section>
<% end %>
</br>
